pipeline {
    agent any

    tools {
        maven 'Maven 3.9.11'
    }

    stages {
        stage('Unit Test') {
            steps {
                sh 'mvn clean test --settings src/main/resources/settings.xml'
                // Mostrar archivos generados para debug
                sh 'ls -lR target/surefire-reports || true'
                // Mostrar logs de pruebas para debug
                sh 'cat target/surefire-reports/*.txt || true'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Some tests failed.'
        }
    }
}
