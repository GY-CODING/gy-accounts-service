pipeline {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-17'
            args '-v $HOME/.m2:/root/.m2' // Opcional: cache de dependencias
        }
    }

    environment {
        GITHUB_USER = credentials('GITHUB_USER')
        GITHUB_TOKEN = credentials('GITHUB_TOKEN')
    }

    stages {
        stage('Unit Test') {
            steps {
                sh 'mvn clean test --settings src/main/resources/settings.xml'
                sh 'ls -lR target/surefire-reports || true'
                sh 'cat target/surefire-reports/*.txt || true'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Some tests failed.'
        }
    }
}
