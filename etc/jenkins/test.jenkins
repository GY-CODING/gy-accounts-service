pipeline {
    agent any

    stages {
        stage('Unit Tests') {
            steps {
                sh 'mvn clean test --settings src/main/resources/settings.xml''
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Some tests failed.'
        }
    }
}
