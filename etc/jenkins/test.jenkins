pipeline {
    agent any

    stages {
        stage('Unit Test') {
            steps {
                sh 'mvn clean test --settings src/main/resources/settings.xml'
                // Listar archivos generados para debug
                sh 'ls -lR target/surefire-reports || true'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Some tests failed.'
        }
    }
}
